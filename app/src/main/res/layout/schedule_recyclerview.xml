<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    android:weightSum="1"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_mood_black_24dp"
        android:id="@+id/schedule_image"
        android:layout_weight="0.1"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/schedule_name"
        android:layout_weight="0.4"
        android:text="용돈"
        android:gravity="center|left"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.498"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/schedule_money"
            android:layout_weight="0.9"
            android:text="259원"
            android:textSize="24dp"
            android:gravity="center|right"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_change"
            android:layout_weight="0.1"
            android:src="@drawable/ic_loop_black_24dp"
            android:scaleY="0.3"
            android:visibility="invisible"
            android:scaleType="fitStart"
            />

    </LinearLayout>



